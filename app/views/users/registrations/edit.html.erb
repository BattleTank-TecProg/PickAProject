<div class="text-center" style="display:block">
	<div class="register-box" style="padding:0px;margin-top:50px;display:inline-block">
		<div class="register-logo">
			<span class="logo-lg"><b>Pick</b>a<b>Project</b></span>
		</div>

		<div class="register-box-body">
			<p class="login-box-msg">Update your profile x)</p>
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
				<%= devise_error_messages! %>

				<div class="form-group has-feedback text-left input-group">
					<p><b>Upload a profile picture</b></p>
					<%= f.file_field :profile_picture %>
				</div>

				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-user"></i>
					</div>
					<%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Username" %>
				</div>
				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-at"></i>
					</div>
					<%= f.email_field :email, class: "form-control", placeholder: "Email" %>
				</div>
				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-lock"></i>
					</div>
					<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "New password" %>
				</div>
				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-lock"></i>
					</div>
					<%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control", placeholder: "Retype new password" %>
				</div>
				
				<hr>
				<!-- phone -->
				<div class="form-group text-left">
					<div class="input-group">
						<div class="input-group-addon">
							<i class="fa fa-phone"></i>
						</div>
						<%= f.text_field :phone, class: "form-control", placeholder: "Phone" %>
						<!-- , data-inputmask: "&quot;mask&quot;: &quot;(99) 9999-9999&quot;", data-mask: "", type: "text" %> -->
					</div><!-- /.input group -->
				</div><!-- /.form group -->

				<!-- Date mm/dd/yyyy -->
				<div class="form-group text-left">
					<div class="input-group">
						<div class="input-group-addon">
							<i class="fa fa-calendar"></i>
						</div>
						<%= f.text_field :birthday, class: "form-control", placeholder: "Birthday" %>
						<!-- , data-inputmask: "'alias': 'mm/dd/yyyy'", data-mask: "", type: "text" %> -->
					</div><!-- /.input group -->
				</div><!-- /.form group -->

				<hr>
				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-map-marker"></i>
					</div>
					<%= f.text_field :country, autocomplete: "off" , class: "form-control", placeholder: "Country" %>
				</div>
				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-map-marker"></i>
					</div>
					<%= f.text_field :state, autocomplete: "off" , class: "form-control", placeholder: "State" %>
				</div>
				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-map-marker"></i>
					</div>
					<%= f.text_field :city, autocomplete: "off" , class: "form-control", placeholder: "City" %>
				</div>

				<hr>
				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-briefcase"></i>
					</div>
					<%= f.text_field :work, autocomplete: "off" , class: "form-control", placeholder: "Work" %>
				</div>
				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-graduation-cap"></i>
					</div>
					<%= f.text_area :education, autocomplete: "off" , class: "form-control", placeholder: "Education" %>
				</div>

				<hr>
				<p>You must enter your current password to make changes.</p>
				<div class="form-group has-feedback input-group">
					<div class="input-group-addon">
						<i class="fa fa-key"></i>
					</div>
					<%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: "Current password" %>
				</div><br>
				
				<div class="row">
					<div class="col-xs-4">
						<%= link_to "Back", current_user, class: "btn btn-link btn-block btn-flat" %>
					</div>
					<div class="col-xs-offset-4 col-xs-4">
						<%= f.submit "Update", class: "btn btn-primary btn-block btn-flat" %>
					</div><!-- /.col -->
				</div>
			<% end %>
		</div><!-- /.form-box -->
	</div><!-- /.register-box -->
</div>
