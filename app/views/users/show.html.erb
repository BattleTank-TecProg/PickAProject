<!-- Content Header (Page header) -->
<section class="content-header">
</section>
<!-- Main content -->
<section class="content">
	<div class="row">
		<div class="col-md-3">
			<div class="box box-primary">
				<div class="box-body box-profile">
					<!-- Profile Image -->
					<% if @user.profile_picture.present? %>
						<%= image_tag(@user.profile_picture.url(), class: "profile-user-img img-responsive img-circle") %>
					<% else %>
						<%= image_tag("missing_profile_picture.jpg", class: "profile-user-img img-responsive img-circle") %>
					<% end %>
					<h3 class="profile-username text-center"><%= @user.username %></h3>
					<p class="text-muted text-center"><%= @user.work %></p>

					<ul class="list-group list-group-unbordered">
						<li class="list-group-item">
							<b>Friends</b> <a class="pull-right">0</a>
						</li>
						<li class="list-group-item">
							<b>Ranking</b> <a class="pull-right">1ยบ</a>
						</li>
					</ul>

					<% if user_signed_in? %>
						<% if current_user.id != @user.id %>
							<a class="btn btn-primary btn-block disabled"><b>Add Friend</b></a>
						<% else %>
							<%= link_to edit_user_registration_path, :get => :edit, class: "btn btn-primary btn-block" do %>
								<b>Edit profile</b>
							<% end %>
						<% end %>
					<% end %>
				</div>
				<!-- /.box-body -->
			</div>
			<!-- /.box -->

			<!-- About Me Box -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">About Me</h3>
				</div>
				<!-- /.box-header -->
				<div class="box-body">
					<strong><i class="fa fa-book margin-r-5"></i> Education</strong>
					<p class="text-muted">
						<% if @user.education.blank? %>
							Unavailable
						<% else %>
							<%= @user.education %>
						<% end %>
					</p>

					<hr>
					<strong><i class="fa fa-map-marker margin-r-5"></i> Location</strong>
					<p class="text-muted">
						<% if @user.city.blank? and @user.state.blank? and @user.country.blank? %>
							Unavailable
						<% else %>
							<% if not @user.city.blank? %>
								<%= @user.city %><% if @user.state.blank? and (not @user.country.blank?) %>, <% end %>
								<% if not @user.state.blank? %> - <% end %>
							<% end %>
							<% if not @user.state.blank? %>
								<%= @user.state %><% if not @user.country.blank? %>, <% end %>
							<% end %>
							<% if not @user.country.blank? %>
								<%= @user.country %>
							<% end %>
						<% end %>
					</p>

					<hr>
					<strong><i class="fa fa-user margin-r-5"></i> Contact</strong>
					<p class="text-muted">
							<i class="fa fa-at margin-r-5"></i> <%= @user.email %><br>
						<% if not @user.phone.blank? %>
							<i class="fa fa-phone margin-r-5"></i> <%= @user.phone %>
						<% end %>
					</p>

					<hr>
					<strong><i class="fa fa-calendar margin-r-5"></i> Birthday</strong>
					<p class="text-muted">
						<% if @user.birthday.blank? %>
							Unavailable
						<% else %>
							<%= @user.birthday %>
						<% end %>
					</p>

					<hr>
					<strong><i class="fa fa-pencil margin-r-5"></i>
						 Skills
						<% if user_signed_in? and current_user.id == @user.id %>
							<a href="#" class="pull-right disabled"><i class="fa fa-plus margin-r-5"></i></a>
						<% end %>
					</strong>
					<p>
						<% @rand_gen = Random.new %>
						<% @user.skills.each do |skill| %>
							<% @rand = @rand_gen.rand(1..5) %>
							<% case @rand %>
							<% when 1 %>
								<span class="label label-danger"><%= skill.name %></span>
							<% when 2 %>
								<span class="label label-success"><%= skill.name %></span>
							<% when 3 %>
								<span class="label label-info"><%= skill.name %></span>
							<% when 4 %>
								<span class="label label-warning"><%= skill.name %></span>
							<% when 5 %>
								<span class="label label-primary"><%= skill.name %></span>
							<% end %>
						<% end %>
					</p>
				</div>
				<!-- /.box-body -->
			</div>
			<!-- /.box -->
		</div><!-- /.col-md-3 -->
		<div class="col-md-9">
			<div class="nav-tabs-custom">
				<ul class="nav nav-tabs">
					<li class="active"><a aria-expanded="true" href="#projects" data-toggle="tab">Projects</a></li>
					<li class=""><a aria-expanded="false" href="#public_activity" data-toggle="tab">Public Activity</a></li>
					<li class=""><a aria-expanded="false" href="#tasks" data-toggle="tab">Tasks</a></li>
				</ul>
				<div class="tab-content">
					<!-- Projects' Tab -->
					<div class="tab-pane active" id="projects">
						<% @user.own_projects.each do |own_project| %>
							
						<% end %>
					</div>
					<!-- /.tab-pane -->
					<!-- Public Activity's Tab -->
					<div class="tab-pane" id="public_activity">
						<% @user.projects.each do |project| %>
							
						<% end %>
					</div>
					<!-- /.tab-pane -->
					<!-- Tasks' Tab -->
					<div class="tab-pane" id="tasks">
						<% @user.tasks.each do |task| %>

						<% end %>
					</div><!-- /.tab-pane -->
				</div><!-- /.tab-content -->
			</div><!-- /.nav-tabs-custom -->


			<!-- AREA CHART -->
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">Contributions</h3>
				</div>
				<div class="box-body">
					<div class="chart">
						<!-- <= line_chart @data, @options %> -->
					</div>
				</div>
				<!-- /.box-body -->
			</div>
			<!-- /.box -->


			
		</div><!-- /.col-md-9 -->
	</div><!-- /.row -->
</section><!-- Content Header (Page header) -->

<!-- ChartJS 1.0.1 -->
<script src="../../plugins/chartjs/Chart.min.js"></script>
