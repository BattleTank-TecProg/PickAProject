<%- model_class = Project -%>
<div class="project-show-container">
  <div class="page-header">
    <h1><%=t '.title', :default => @project.title %></h1>
    <div id="percentage-container">
      <div class="header-information">
        <div class="progress">
          <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="10"
            aria-valuemin="0" aria-valuemax="100" style="width:10%">
                10%
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="project-overview">
    <div class="project-overview-image col-md-7">
      <% if @project.image_file.present? %>
        <%= image_tag(@project.image_file.url(), class: "image-config") %>
      <% else %>
        <!-- [TODO] Add an alternative file -->
      <% end %>
    </div>

    <div class="project-information col-md-5">
      <dl class="dl-horizontal">
        <dt>
          <strong>
            <%= model_class.human_attribute_name(:author) %>:
          </strong>
        </dt>
        <dd>
          <%= @project.author %>
        </dd>

        <dt>
          <strong>
            <%= model_class.human_attribute_name(:category) %>:
          </strong>
        </dt>
        <dd>
          <%= @project.category %>
        </dd>

        <dt>
          <strong>
            <%= model_class.human_attribute_name(:status) %>:
          </strong>
        </dt>
        <dd>
          <%= @project.status %>
        </dd>

        <dt>
          <strong>
            Created at:
          </strong>
        </dt>
        <dd>
          <%= @project.created_at.strftime("%d/%m/%Y") %>
        </dd>
      </dl>
    </div>
  </div>

  <div class="project-about">
    <div class="project-description col-md-7">
      <dl>
        <dt>
          <strong>
            <%= model_class.human_attribute_name(:description) %>:
          </strong>
        </dt>
        <dd>
          <%= @project.description %>
        </dd>
      </dl>
    </div>

    <div class="project-contributors col-md-5">
      <dl>
        <dt>
          <strong>
            Contributors:
          <strong>
        </dt>
        <dd>
          Imagens dos contribuidores
        </dd>
    </dl>
  </div>

  <div class="tasks">
    <% if @project.tasks.present? %>
      <% @project.tasks.each do |each_task| %>
        <div class="each-task">
          <div class="task-title">
            <!-- The task name -->
            <h2>Task # <%= each_task.title %></h2>
            <hr> <!-- Display a line above the task name -->
          </div>
          <!-- Display the task image -->
          <div class="task-overview">
            <div class="task-image">
              <% if each_task.image_file.present? %>
                <%= image_tag(each_task.image_file.url(), class: "image-config") %>
              <% else %>
                <!-- [TODO] Add an alternative file -->
              <% end %>
            </div>

            <!-- Display task information -->
            <div class="task-information">
              <dl>
                <dt>
                  <h3>Maker:</h3>
                </dt>
                <dd>
                  <!-- Verify if the task is assigned to an user -->
                  <% if false %>
                    <!-- Verify if the user have an picture -->
                    <% if each_task.image_file.present? %>
                      <div class="contributor-image">
                        <% image_tag(each_task.image_file.url(), class: "image-config") %>
                      </div>
                    <% else %>
                      <!-- Do nothing -->
                    <% end %>
                  <!-- If it isn't assigned to any user -->
                  <% else %>
                    <!-- Display button to assign the task -->
                    <!--[TODO] Fix this link -->
                    <%= link_to "Be yourself!" , edit_project_path(@project), class: 'btn btn-default' %>
                  <% end %>
                </dd>
              </dl>
            </div>

            <!-- Display line to separate the circle of the task difficult -->
            <div class="difficult-circle-container">
              <!-- Div to create a circle -->
              <div class="difficult-circle">
                <h1><%= each_task.difficult %></h1>
              </div>
            </div>

          </div>
        </div>
      <% end %>
    <% else %>
    <% end %>
  </div>

  <div class= "centralize debug-border">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                  projects_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_project_path(@project), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  project_path(@project),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
  </div>
</div>
